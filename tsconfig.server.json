{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["src/index.tsx", "src/client"]
}
